<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>
<div metal:define-macro="portlet"
     tal:define="experiences context/@@manageInterClps;
                 institutions context/@@manageInterClps"
     tal:condition="python:user.has_role(['Manager'], here)">
    <dl id="portlet-gestion-db">
        <dt class="portletHeaderDB">
            <span class="portletTopLeft"></span>
            <span class="portletTopRight"></span>
            Gestion de la DB
        </dt>

        <dt class="portletItemDB"></dt>

        <dt id="Recits"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> experiences</dt>
            <dd class="portletItemDB">
                <a href=""
                   tal:attributes="href string:${context/portal_url}/admin-experience-creer">Cr&eacute;er</a>
            </dd>
            <dd class="portletItemDB">
                <a href=""
                   tal:attributes="href string:${context/portal_url}/admin-experience-lister">Lister</a>
            </dd>
            <dd class="portletItemDB">
                <a href=""
                   tal:attributes="href string:${context/portal_url}/admin-experience-recherche">Modifier</a>
            </dd>
            <dd class="portletItemDB">
                <a href=""
                   tal:attributes="href string:${context/portal_url}/admin-experience-recherche">Rechercher</a>
            </dd>

            <dd tal:define="nbrExp python:experiences.getCountExperienceByEtat('private')"
                 class="portletItemDB etatBase">
                <br />
                <a href="admin-experience-lister-par-etat?etat=private">Etat priv&eacute; : <span tal:content="nbrExp">nbr</span></a>
            </dd>
            <dd tal:define="nbrExp python:experiences.getCountExperienceByEtat('pending')"
                 class="portletItemDB etatBase">
                <a href="admin-experience-lister-par-etat?etat=pending">Etat en attente : <span tal:content="nbrExp">nbr</span></a>
            </dd>
            <dd tal:define="nbrExp python:experiences.getCountExperienceByEtat('publish')"
                 class="portletItemDB etatBase">
                <a href="admin-experience-lister-par-etat?etat=publish">Etat publi&eacute; : <span tal:content="nbrExp">nbr</span></a>
            </dd>
            <dd tal:define="nbrExp python:experiences.getCountAllExperience()"
                 class="portletItemDB etatBase">
                <br />
                <img src="puce_orange_incruste.png" />&nbsp;<span class="gras">Total : <span tal:content="nbrExp">nbr</span></span>
                <span class="portlet-gestion-db-separation"></span>
            </dd>


        <dt id="Auteurs"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> auteurs</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/admin-auteur-creer">
                    Cr&eacute;er
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/admin-auteur-creer">
                    Lister
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/admin-auteur-chercher">
                    Rechercher
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="Institutions"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> institutions</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/institution-creer">
                    Cr&eacute;er
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/admin-institution-lister">
                    Lister
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/institution-chercher">
                    Modifier
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/institution-chercher">
                    Rechercher
                </a>
            </dd>
            <dd class="portletItemDB">
                <br />
                <a href="" tal:attributes="href string:admin-assuetude-organisme-ressource">
                    Organisme Assuetude
                </a>
            </dd>
            <dd tal:define="nbrInst python:institutions.getCountInstitutionByEtat('private')"
                 class="portletItemDB etatBase">
                <br />
                <a href="admin-institution-lister-par-etat?etat=private">
                    Etat priv&eacute; : <span tal:content="nbrInst">nbr</span></a>
            </dd>
            <dd tal:define="nbrInst python:institutions.getCountExperienceByEtat('publish')"
                 class="portletItemDB etatBase">
                <a href="admin-institution-lister-par-etat?etat=publish">
                    Etat publi&eacute; : <span tal:content="nbrInst">nbr</span></a>
            </dd>
            <dd tal:define="nbrInst python:institutions.getCountAllInstitution()"
                 class="portletItemDB etatBase">
                <br />
                <img src="puce_orange_incruste.png" />
                &nbsp;<span class="gras">Total :
                <span tal:content="nbrInst">nbr</span></span>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="InstitutionType"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Type d'institution</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/institution-type-creer">
                    Gestion
                </a>
            <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="Ressource"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Ressources</dt>
            <dd class="portletItemDB discreet">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;(Livres - Outils - Dossiers)</dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/ressource-creer">
                    Cr&eacute;er
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/ressource-lister">
                    Lister
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/ressource-chercher">
                    Modifier
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/ressource-chercher">
                    Rechercher
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="Support"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Support </dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/support-creer">
                    Gestion
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="MotCle"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Mots-Cl&eacute;</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/mot-cle-creer">
                    Gestion
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="Theme"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Th&egrave;me</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/theme-creer">
                    Gestion
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="Public"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Public</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/public-creer">
                    Gestion
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="MilieuDeVie"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Milieu de vie</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/milieu-de-vie-creer">
                    Gestion
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>

        <dt id="PlateForme"
            class="portletItemDB"><img src="puce_presentation_bd.png" /> Plateforme</dt>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/plateforme-creer">
                    Gestion des plates-formes
                </a>
            </dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/sous-plateforme-creer">
                    Gestion des sous plates-formes
                </a>
                <span class="portlet-gestion-db-separation"></span>
            </dd>
            
         <dt id="Assuetude"
             class="portletItemDB"><img src="puce_presentation_bd.png" /> Assu&eacute;tude </dt>
              <dd class="portletItemDB discreet">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;(pour les institutions)</dd>
            <dd class="portletItemDB">
                <a href="" tal:attributes="href string:${context/portal_url}/assuetude-for-institution-gerer">
                    Gestion des assu&eacute;tudes pour institutions
                </a>
            </dd>

        <dt class="portletFooterDB">
            <span class="portletBottomLeft"></span>
            <span class="portletBottomRight"></span>
        </dt>
     </dl>
</div>
</body>
</html>
