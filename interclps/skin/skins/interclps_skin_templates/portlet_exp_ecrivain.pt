<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>
<div metal:define-macro="portlet"
     tal:define="experiences context/@@manageInterClps;
                 auteur python:experiences.getAuteurTypeByLogin()"
     tal:condition="python:user.has_role(['RecitExperience', 'Manager', 'Site Administrator'], here)">
    <dl id="portlet-db-auteur">
        <dt class="portletHeaderDB">
            <span class="portletTopLeft"></span>
            <span class="portletTopRight"></span>
            Mes donn&eacute;es
        </dt>
        <div class="portletItemDB">
            <div tal:condition="python: auteur.auteur_for_experience==True"
                 class="menu-bloc">
                <dt class="menu-titre">experiences</dt>
                    <dd>
                        <a href=""
                           tal:attributes="href string:${context/portal_url}/experience-creer">Cr&eacute;er</a>
                    </dd>
                    <dd>
                        <a href=""
                           tal:attributes="href string:${context/portal_url}/experience-lister-auteur">Lister</a>
                    </dd>
                    <dd>
                        <a href=""
                           tal:attributes="href string:${context/portal_url}/experience-gerer">Modifier</a>
                    </dd>
            </div>
            
            <div class="separation"></div>
        
            <div tal:condition="python: auteur.auteur_for_institution==True"
                 class="menu-bloc">
                <dt class="menu-titre">institutions</dt>
                    <dd>
                        <a href=""
                           tal:attributes="href string:${context/portal_url}/institution-creer">Cr&eacute;er</a>
                    </dd>
                    <dd>
                        <a href=""
                           tal:attributes="href string:${context/portal_url}/institution_listing_par_login_auteur">Lister</a>
                    </dd>
                    <dd>
                        <a href=""
                           tal:attributes="href string:${context/portal_url}/institution-gerer">Modifier</a>
                    </dd>
            </div>
        </div>
        <dt class="portletFooterDB">
            <span class="portletBottomLeft"></span>
            <span class="portletBottomRight"></span>
        </dt>
     </dl>
</div>
</body>
</html>
