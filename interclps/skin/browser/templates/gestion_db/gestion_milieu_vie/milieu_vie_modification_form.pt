<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <script src="validate_forms.js" type="text/javascript"></script>
    <metal:noborder fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />
</head>
<body>
<div metal:fill-slot="main"
     tal:define="milieuDeViePk request/milieuDeViePk;
                 milieudevies python:view.getMilieuDeVieByPk(milieuDeViePk)">
<form action="milieu-de-vie-inserer" method="post">
    <br />
    <h1>:: Gestion des milieux de vie ::</h1>
    <fieldset>
        <legend class="legende">Modifier un milieu de vie</legend>
        <tal:boucle tal:repeat="milieudevie milieudevies">
            <form action="milieu-de-vie-inserer" method="post">
                <div class="div_question">
                    <img src="list_flch_rouge.png" /> Milieu de vie
                    <br />
                    <input type="text"
                           name="milieudevie_nom"
                           value=""
                           size="50"
                           class="grasorange"
                           tal:attributes="value milieudevie/milieudevie_nom" />
                </div>
                <div class="div_question">
                    <img src="list_flch_rouge.png" /> Etat
                    <br />
                    <select name="milieudevie_actif">
                        <option value="True"
                                tal:attributes="selected python:milieudevie.milieudevie_actif and 'selected' or None;">Activer</option>
                        <option value="False"
                                tal:attributes="selected python:not milieudevie.milieudevie_actif and 'selected' or None;">DÃ©sactiver</option>
                    </select>
                </div>
                <div class="div_form_input">
                    <input type="hidden"
                           name="operation"
                           value="update" />
                    <input type="hidden"
                           name="milieudevie_pk"
                           value=""
                           tal:attributes="value milieudevie/milieudevie_pk" />
                    <input type="submit"
                           value="Modifier le milieu de vie" />
                </div>
            </form>
        </tal:boucle>
    </fieldset>

</form>
</div><!-- div metal-->
</body>
</html>

