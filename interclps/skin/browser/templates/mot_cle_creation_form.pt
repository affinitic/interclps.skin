<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <script src="validate_forms.js" type="text/javascript"></script>
    <metal:noborder fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />

    <metal:js fill-slot="javascript_head_slot">
        <script src="++resource++collective.javascript.jqueryui/js/jquery-1.4.2.min.js" type="text/javascript"></script>
        <script src="++resource++collective.javascript.jqueryui/js/jquery-ui.min.js" type="text/javascript"></script>

        <script src="validate_forms.js" type="text/javascript"></script>
        <script src="++resource++interclps.js" type="text/javascript"></script>
    </metal:js>
    <metal:css fill-slot="style_slot">
        <link href="++resource++collective.javascript.jqueryui/css/ui-lightness/jquery-ui.css" type="text/css" rel="stylesheet" />
    </metal:css>

</head>

<body>
<div metal:fill-slot="main">
    <br />
    <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
    </div>
    <h1>Gestion des mots-clé</h1>
    <fieldset tal:define="motcles python: view.getAllMotCle()">
        <legend class="legende">Liste des mots-clé</legend>
        <table width="50%"
               class="listing"
               align="center">
            <thead>
                <tr>
                    <th> Mot </th>
                    <th> Etat </th>
                    <th class="nosort"> Modifier </th>
                </tr> 
            </thead>
            <tbody>
                <tal:boucle tal:repeat="motcle motcles">
                    <span tal:define="odd repeat/motcle/odd">
                        <tr tal:attributes="class python:odd and 'odd' or 'even'">
                            <td align="center">
                                <span tal:content="motcle/motcle_mot">mot-cle</span>
                            </td>
                            <td align="center">
                                <span tal:condition="python: motcle.motcle_actif">
                                    <span class="vert-actif">Actif</span>
                                </span>
                                <span tal:condition="python: motcle.motcle_actif==False">
                                    <span class="rouge-non-actif">Non-actif</span>
                                </span>
                            </td>
                            <td align="center">
                                <div class="btn-modifier">
                                <a href=""
                                   tal:attributes="href string: mot-cle-modifier?motclePk=${motcle/motcle_pk}">&nbsp;</a>
                                </div>
                            </td>
                        </tr>
                    </span>
                </tal:boucle>
            </tbody>
        </table>
    </fieldset>
    <fieldset>
        <legend class="legende">Encoder un mot-clé</legend>
        <form action="mot-cle-inserer" method="post">
            <div>
                <img src="list_flch_rouge.png" /> Mot-clé
                <br />
                <input type="text"
                       name="motcle_mot"
                       value=""
                       size="50" />
            </div>
            <div>
                <img src="list_flch_rouge.png" /> Etat
                <br />
                <select name="motcle_actif">
                    <option value="True" selected="selected">Activer</option>
                    <option value="False">Désactiver</option>
                </select>
            </div>
            <hr />
            <div class="div_form_input">
                <input type="hidden"
                       name="operation"
                       value="insert" />
                <input type="submit"
                       value="Enregister le mot clé" />
            </div>
        </form>
    </fieldset>
    <fieldset>
        <legend class="legende"> A partir du XML Rezo </legend>
        <br />
        <form action="mot-cle-inserer" method="post">
            <div>
                <img src="list_flch_rouge.png" /> Mot-clé
                <br />                                    
                <input type="text"
                       id="thesaurus"
                       name="motcle_mot"
                       value=""
                       size="50">
                <br />
            </div>
            <div>
                <img src="list_flch_rouge.png" /> Etat
                <br />
                <select name="motcle_actif">
                    <option value="True" selected="selected">Activer</option>
                    <option value="False">Désactiver</option>
                </select>
            </div>
            <hr />
            <input type="hidden"
                   name="operation"
                   value="insert" />
            <input type="submit"
                   value="Ajouter le mot-clé"
                   class="search-button" />
        </form>
    </fieldset>
</div><!-- div metal-->
</body>
</html>

