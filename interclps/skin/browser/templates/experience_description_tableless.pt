<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <script src="validate_forms.js" type="text/javascript"></script>
    <metal:noborder fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main"
     tal:define="experiences python:view.getExperienceByPk(experiencePk=request.experiencePk)">
    <tal:boucle tal:repeat="experience experiences">
        <br />
        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>
        <h1><span tal:content="experience/experience_titre" /></h1>

        <fieldset class="description-texte">
            <h5>Resumé</h5>
            <p  class="info-db"><span tal:replace="structure experience/experience_resume"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Elements de contexte</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_element_contexte" class="info-db"/>
        </fieldset>
        
        <fieldset class="description-texte">
        <h5>Institution porteur(s) de l'expérience</h5>
            <span tal:define="institutions python:view.getInstitutionPorteur(experience.experience_pk)">
                <span tal:repeat="institution institutions">
                    <span tal:content="institution/institution_porteur/institution_nom"
                          class="info-db">institution porteur</span>
                    <br />
                </span>
            </span>
        </fieldset>
        
        <fieldset class="description-texte">
        <h5>Institution partenaire(s) de l'expérience</h5>
            <span tal:define="institutions python:view.getInstitutionPartenaire(experience.experience_pk)">
                <span tal:repeat="institution institutions">
                    <span tal:content="institution/institution_partenaire/institution_nom"
                          class="info-db">institution partenaire</span>
                    <br />
                </span>
            </span>
        </fieldset>

        <fieldset class="description-texte">
            <h5>Objectifs</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_objectif"></span></p>
        </fieldset>

        <fieldset class="description-texte">
            <h5>Public </h5>
            <p class="info-db"><span tal:replace="structure experience/experience_public_vise"></span></p>
        </fieldset>

        <fieldset class="description-texte">
            <h5>Mileiu de vie </h5>
            <span tal:define="milieudevies python:view.getMilieuDeVieByExperiencePk(experience.experience_pk)">
                <span tal:repeat="milieudevie milieudevies">
                    <span tal:content="milieudevie"
                          class="info-db">milieu de vie</span>
                    <br />
                </span>
            </span>
        </fieldset>

        <fieldset class="description-texte">
            <h5>Ressources</h5>
            <span class="rubrique-db">Institution</span>
            <br />
            <!--
            <span tal:define="institutions python:view.getRessourceInstitution(experience.experience_pk)">
              <span tal:repeat="institution institutions">
                <span tal:content="institution/ressource_institution/institution_nom"
                      class="info-db">institution ressource</span>
              <br />
              </span>
            </span>
            -->
            <br />

            <br />
            <span class="rubrique-db">Outils</span>
            <br />
             <span tal:define="ressources python:view.getRessourceByPk(experience.experience_pk)">
              <span tal:repeat="ressource ressources">
                <span tal:content="ressource/ressource_titre"
                      class="info-db">titre ressource</span>
                <br />
              </span>
            </span>
            <br />

            <br />
            <span class="rubrique-db">Formations</span>
            <br />
            <p class="info-db"><span tal:content="experience/experience_formation_suivie"></span></p>
            <br />
            <br />
            <span class="rubrique-db">Autres</span>
            <br />
            <p class="info-db"><span tal:content="experience/experience_autres_ressources"></span></p>
            <br />
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Démarches et actions</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_demarche_actions"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Moyens</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_moyens"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Evaluation et enseignements</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_evaluation_enseignement"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Periode de déroulement du projet</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_periode_deroulement"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Pour aller plus loin</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_aller_plus_loin"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Perspectives envisagées</h5>
            <p class="info-db"><span tal:replace="structure experience/experience_perspective_envisagee"></span></p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Territoire</h5>
            <span tal:condition="python:experience.experience_territoire_tout_brabant_wallon">
                <p class="info-db">Tout le Brabant wallon</p>
            </span>
            <p class="info-db">
                <tal:block tal:define="communes python:view.getCommuneByExperiencePk(experience.experience_pk)">
                    <tal:boucle tal:repeat="commune communes">
                        <span tal:content="commune"
                              class="info-db">commune</span><br />
                    </tal:boucle>
                </tal:block>
            </p>
        </fieldset>
        
        <fieldset class="description-texte">
            <h5>Personne de contact</h5>
            <span tal:content="experience/experience_personne_contact" class="info-db"></span><br />
            <span tal:content="experience/experience_personne_contact_email" class="info-db"></span><br />
            <span tal:content="experience/experience_personne_contact_telephone" class="info-db"></span><br />
            <span tal:content="experience/experience_personne_contact_institution" class="info-db"></span><br />
        </fieldset>
    </tal:boucle>
</div><!-- div metal-->
</body>
</html>
